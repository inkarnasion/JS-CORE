{{> header}}
<div id="deleteMovie">
  <h1>Delete movie</h1>
  <form action="#/deleteMovie/{{_id}}" method="POST">
    <label>Title</label>
    <input type="text" name="title" value="{{title}}" disabled="disabled">
    <label>Image Url</label><input type="text" name="imageUrl" value="{{imageUrl}}" disabled="disabled">
    <label>Description</label>
    <textarea type="text" name="description" disabled="disabled">{{description}}</textarea>
    <label>Genres</label>
    <input type="text" name="genres" value="{{genres}}" disabled="disabled">
    <label>Available Tickets</label>
    <input type="number" name="tickets" value="{{tickets}}" disabled="disabled">
    <input type="submit" value="Delete">
  </form>
</div>
{{> footer}}